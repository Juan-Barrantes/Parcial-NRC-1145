<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.parcial1145_barrantes">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logoapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoapp_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Parcial1145barrantes"
        tools:targetApi="31">
        <activity
            android:name=".PrimeActivity"
            android:exported="false"
            android:label="Primevideo"/>
        <activity
            android:name=".NetflixActivity"
            android:exported="false"
            android:theme="@style/Theme.Parcial1145barrantes.NoActionBar" />
        <activity
            android:name=".HboActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/login"
            android:theme="@style/Theme.Parcial1145barrantes.TransparentActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Parcial1145barrantes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>